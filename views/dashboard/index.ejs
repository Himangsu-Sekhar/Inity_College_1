<% layout('./layouts/main') %>

  <div class="mb-8">
    <h2 class="text-3xl font-bold text-gray-800 mb-2">Dashboard</h2>
    <p class="text-gray-600">Manage your Hostels and track performance</p>
  </div>

  <!-- Stats Cards -->
  <div class="grid md:grid-cols-3 gap-6 mb-8">
    <div
      class="bg-gradient-to-br from-blue-500 to-blue-600 p-6 rounded-xl shadow-lg text-white transform hover:scale-105 transition-transform duration-200">
      <div class="flex items-center justify-between mb-2">
        <h3 class="text-sm font-medium text-blue-100">Total Hostels</h3>
      </div>
      <p class="text-4xl font-bold">
        <%= stats ? stats.totalPGs : pgs.length %>
      </p>
      <p class="text-sm text-blue-100 mt-1">Active properties</p>
    </div>

    <% if (stats) { %>
      <div
        class="bg-gradient-to-br from-green-500 to-green-600 p-6 rounded-xl shadow-lg text-white transform hover:scale-105 transition-transform duration-200">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium text-green-100">Total Beds</h3>
        </div>
        <p class="text-4xl font-bold">
          <%= stats.totalBeds %>
        </p>
        <p class="text-sm text-green-100 mt-1">Available spaces</p>
      </div>

      <div
        class="bg-gradient-to-br from-amber-500 to-amber-600 p-6 rounded-xl shadow-lg text-white transform hover:scale-105 transition-transform duration-200">
        <div class="flex items-center justify-between mb-2">
          <h3 class="text-sm font-medium text-amber-100">Pending Payments</h3>
        </div>
        <p class="text-4xl font-bold">
          <%= stats.pendingPayments %>
        </p>
        <p class="text-sm text-amber-100 mt-1">Requires attention</p>
      </div>
      <% } %>
  </div>

  <!-- Add New PG Section -->
  <div class="mb-8">
    <button onclick="toggleForm()"
      class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold shadow-md transition-colors duration-200 flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add New Hostel
    </button>


    <div id="pgForm" class="hidden mt-4 bg-white p-6 rounded-xl shadow-lg max-w-2xl border border-gray-100">
      <div class="flex items-center justify-between mb-4">
        <h4 class="text-xl font-semibold text-gray-800">Create New Hostel Property</h4>
        <button onclick="toggleForm()" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <form action="/pg/new" method="POST" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Hostel Name *</label>
          <input name="name" placeholder="e.g., Sunshine PG"
            class="border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            required />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Address *</label>
          <textarea name="address" placeholder="Full address" rows="2"
            class="border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            required></textarea>
        </div>

        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">City *</label>
            <input name="city" placeholder="City name"
              class="border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
              required />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Pincode</label>
            <input name="pincode" placeholder="6-digit pincode"
              class="border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all" />
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Property Type *</label>
          <select name="type"
            class="border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
            <option value="boys">Boys Only</option>
            <option value="girls">Girls Only</option>
            <option value="coed" selected>Co-ed</option>
          </select>
        </div>

        <div class="flex gap-3 pt-2">
          <button type="submit"
            class="flex-1 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200">
            Create Hostel
          </button>
          <button type="button" onclick="toggleForm()"
            class="px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-semibold transition-colors duration-200">
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- PG List -->
  <div class="mb-4 flex items-center justify-between">
    <h3 class="text-2xl font-semibold text-gray-800">Your Properties</h3>
    <span class="text-sm text-gray-500">
      <%= pgs.length %>
        <%= pgs.length===1 ? 'property' : 'properties' %>
    </span>
  </div>

  <% if (pgs.length===0) { %>
    <div class="bg-white rounded-xl shadow-sm p-12 text-center">
      <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4">
        </path>
      </svg>
      <h3 class="text-xl font-semibold text-gray-800 mb-2">No properties yet</h3>
      <p class="text-gray-600 mb-4">Get started by adding your first Hostel</p>
      <button onclick="toggleForm()"
        class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors duration-200">
        Add Your First Hostel
      </button>
    </div>
    <% } else { %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% pgs.forEach(pg=> { %>
          <div
            class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden border border-gray-100">
            <div class="p-6">
              <div class="flex items-start justify-between mb-3">
                <h4 class="text-xl font-bold text-gray-800 flex-1">
                  <%= pg.name %>
                </h4>
                <span
                  class="px-3 py-1 text-xs font-semibold rounded-full <%= pg.type === 'boys' ? 'bg-blue-100 text-blue-700' : pg.type === 'girls' ? 'bg-pink-100 text-pink-700' : 'bg-purple-100 text-purple-700' %>">
                  <%= pg.type==='boys' ? 'Boys' : pg.type==='girls' ? 'Girls' : 'Co-ed' %>
                </span>
              </div>

              <div class="flex items-start text-sm text-gray-600 mb-4">
                <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>
                  <%= pg.address %>, <%= pg.city %>
                </span>
              </div>
              <span>
                <a href="/pg/<%= pg._id %>"
                  class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2.5 rounded-lg font-medium transition-colors duration-200">
                  Manage Property
                </a>
                <br>
                <form action="/pg/<%= pg._id %>/delete" method="POST">
                  <button
                    class="block w-full text-center bg-red-600 hover:bg-red-700 text-white px-4 py-2.5 rounded-lg font-medium transition-colors duration-200">Delete
                    Hostel</button>
                </form>
              </span>
            </div>
          </div>
          <% }) %>
      </div>
      <% } %>

        <script>
          function toggleForm() {
            const form = document.getElementById('pgForm');
            form.classList.toggle('hidden');
          }
        </script>