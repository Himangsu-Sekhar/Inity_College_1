<% layout('./layouts/main') %>

  <!-- Header Section -->
  <div class="mb-8">
    <div class="flex items-center gap-3 mb-3">
      <a href="/dashboard" class="text-blue-600 hover:text-blue-700 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
      </a>
      <h2 class="text-3xl font-bold text-gray-800">
        <%= pg.name %>
      </h2>
      <button></button>
    </div>

    <div class="flex items-center text-gray-600">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z">
        </path>
      </svg>
      <p>
        <%= pg.address %>, <%= pg.city %> - <%= pg.pincode %>
      </p>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 mb-8">
    <div class="bg-gradient-to-br from-blue-500 to-blue-600 p-6 rounded-xl shadow-lg text-white">
      <div class="flex items-center justify-between mb-2">
        <h4 class="text-sm font-medium text-blue-100">Rooms</h4>
        <svg class="w-8 h-8 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z">
          </path>
        </svg>
      </div>
      <p class="text-3xl font-bold">
        <%= stats.totalRooms %>
      </p>
    </div>

    <div class="bg-gradient-to-br from-indigo-500 to-indigo-600 p-6 rounded-xl shadow-lg text-white">
      <div class="flex items-center justify-between mb-2">
        <h4 class="text-sm font-medium text-indigo-100">Total Beds</h4>
        <svg class="w-8 h-8 text-indigo-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6">
          </path>
        </svg>
      </div>
      <p class="text-3xl font-bold">
        <%= stats.totalBeds %>
      </p>
    </div>

    <div class="bg-gradient-to-br from-green-500 to-green-600 p-6 rounded-xl shadow-lg text-white">
      <div class="flex items-center justify-between mb-2">
        <h4 class="text-sm font-medium text-green-100">Occupied</h4>
        <svg class="w-8 h-8 text-green-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <p class="text-3xl font-bold">
        <%= stats.occupiedBeds %>
      </p>
    </div>

    <div class="bg-gradient-to-br from-red-500 to-red-600 p-6 rounded-xl shadow-lg text-white">
      <div class="flex items-center justify-between mb-2">
        <h4 class="text-sm font-medium text-red-100">Vacant</h4>
        <svg class="w-8 h-8 text-red-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <p class="text-3xl font-bold">
        <%= stats.vacantBeds %>
      </p>
    </div>
  </div>

  <!-- Action Button -->
  <div class="mb-6 flex items-center gap-3">

    <button onclick="openAddRoomModal()"
      class="h-10 bg-blue-600 hover:bg-blue-700 text-white px-6 rounded-lg font-semibold shadow-md transition-colors duration-200 flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      Add Room
    </button>

    <form action="/tenants/all" method="GET">
      <input type="hidden" name="pgId" value="<%= pg._id %>">
      <button
        class="h-10 bg-green-600 hover:bg-green-700 text-white px-6 rounded-lg text-sm font-medium transition-colors duration-200 whitespace-nowrap">
        Show Tenants
      </button>
    </form>

  </div>


  <!-- Rooms List -->
  <div class="space-y-6">
    <% if (rooms.length===0) { %>
      <div class="bg-white rounded-xl shadow-sm p-12 text-center">
        <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z">
          </path>
        </svg>
        <h3 class="text-xl font-semibold text-gray-800 mb-2">No rooms yet</h3>
        <p class="text-gray-600 mb-4">Start by adding your first room</p>
        <button onclick="openAddRoomModal()"
          class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors duration-200">
          Add Your First Room
        </button>
      </div>
      <% } else { %>
        <% rooms.forEach(room=> { %>
          <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
            <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
                <div class="flex items-center gap-3">
                  <h3 class="text-xl font-bold text-gray-800">Room <%= room.roomNumber %>
                  </h3>
                  <span
                    class="px-3 py-1 text-xs font-semibold rounded-full <%= room.roomType === 'single' ? 'bg-purple-100 text-purple-700' : 'bg-blue-100 text-blue-700' %>">
                    <%= room.roomType==='single' ? 'Single' : 'Shared' %>
                  </span>
                  <span class="px-3 py-1 text-xs font-semibold rounded-full bg-gray-200 text-gray-700">
                    <%= room.beds.length %>
                      <%= room.beds.length===1 ? 'Bed' : 'Beds' %>
                  </span>
                </div>
                <div class="flex items-center gap-2">

                  <form action="/pg/room/<%= room._id %>/bed/add" method="POST" class="flex gap-2 items-center">
                    <input type="hidden" name="pgId" value="<%= pg._id %>" />
                    <input name="bedNumber" placeholder="Bed Number"
                      class="border border-gray-300 h-10 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent w-32"
                      required />
                    <button
                      class="bg-gray-800 hover:bg-gray-900 h-10 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 whitespace-nowrap">
                      + Add Bed
                    </button>
                  </form>

                  <form action="/pg/room/<%= room._id %>/delete" method="POST">
                    <input type="hidden" name="pgId" value="<%= pg._id %>">
                    <button
                      class="bg-red-600 hover:bg-red-700 h-10 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 whitespace-nowrap">
                      Delete Room
                    </button>
                  </form>

                </div>

              </div>

              <div class="p-6">
                <% if (room.beds.length===0) { %>
                  <div class="text-center py-8 text-gray-500">
                    <p>No beds in this room yet</p>
                  </div>
                  <% } else { %>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                      <% room.beds.forEach(bed=> { %>
                        <div
                          class="border-2 rounded-lg p-4 transition-all duration-200 <%= bed.isOccupied ? 'bg-red-50 border-red-300 hover:shadow-md' : 'bg-green-50 border-green-300 hover:shadow-md' %>">
                          <div class="flex items-center justify-between mb-3">
                            <p class="font-bold text-lg text-gray-800">Bed <%= bed.bedNumber %>
                            </p>
                            <span
                              class="px-2 py-1 text-xs font-semibold rounded-full <%= bed.isOccupied ? 'bg-red-200 text-red-700' : 'bg-green-200 text-green-700' %>">
                              <%= bed.isOccupied ? 'Occupied' : 'Vacant' %>
                            </span>
                          </div>

                          <% if (bed.isOccupied && bed.tenantId) { %>
                            <div class="space-y-2 mb-4">
                              <div class="flex items-center text-sm">
                                <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor"
                                  viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                <span class="font-medium text-gray-800">
                                  <%= bed.tenantId.name %>
                                </span>
                              </div>
                              <div class="flex items-center text-sm text-gray-600">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z">
                                  </path>
                                </svg>
                                <%= bed.tenantId.phone %>
                              </div>
                              <div class="flex items-center text-sm font-semibold text-gray-800">
                                <svg class="w-4 h-4 mr-2 text-green-600" fill="none" stroke="currentColor"
                                  viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z">
                                  </path>
                                </svg>
                                ₹<%= bed.tenantId.rentAmount %>/month
                              </div>
                            </div>

                            <form action="/pg/bed/<%= bed._id %>/vacate" method="POST">
                              <input type="hidden" name="pgId" value="<%= pg._id %>" />
                              <button
                                class="w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200">
                                Vacate Bed
                              </button>
                            </form>
                            <% } else { %>
                              <p class="text-sm text-gray-600 mb-4">This bed is currently available</p>
                              <div class="flex items-center gap-2">
                                <button
                                  class="flex-1 h-10 bg-green-600 hover:bg-green-700 text-white px-4 rounded-lg text-sm font-medium transition-colors duration-200"
                                  onclick="openAssignTenantModal('<%= bed._id %>', '<%= room._id %>')">
                                  Assign Tenant
                                </button>
                                <form action="/pg/bed/<%= bed._id %>/delete" method="POST" class="flex-1">
                                  <input type="hidden" name="pgId" value="<%= pg._id %>">
                                  <input type="hidden" name="roomId" value="<%= room._id %>">
                                  <button
                                    class="w-full h-10 bg-red-600 hover:bg-red-700 text-white px-4 rounded-lg text-sm font-medium transition-colors duration-200">
                                    Delete Bed
                                  </button>
                                </form>
                              </div>
                              <% } %>
                        </div>
                        <% }) %>
                    </div>
                    <% } %>
              </div>
            </div>
            <% }) %>
              <% } %>
          </div>

          <!-- Add Room Modal -->
          <div id="addRoomModal"
            class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
            <div class="bg-white rounded-xl shadow-2xl max-w-md w-full transform transition-all">
              <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4 rounded-t-xl">
                <h3 class="text-xl font-bold text-white">Add New Room</h3>
              </div>
              <form action="/pg/<%= pg._id %>/room/add" method="POST" class="p-6">
                <div class="space-y-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Room Number *</label>
                    <input name="roomNumber" placeholder="e.g., 101"
                      class="border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                      required />
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Room Type *</label>
                    <select name="roomType"
                      class="border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                      required>
                      <option value="single">Single Occupancy</option>
                      <option value="shared">Shared Occupancy</option>
                    </select>
                  </div>
                </div>

                <div class="flex gap-3 mt-6">
                  <button type="button" onclick="closeAddRoomModal()"
                    class="flex-1 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors duration-200">
                    Cancel
                  </button>
                  <button type="submit"
                    class="flex-1 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors duration-200">
                    Add Room
                  </button>
                </div>
              </form>
            </div>
          </div>

          <!-- Assign Tenant Modal -->
          <div id="assignTenantModal"
            class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
            <div class="bg-white rounded-xl shadow-2xl max-w-md w-full transform transition-all">
              <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-4 rounded-t-xl">
                <h3 class="text-xl font-bold text-white">Assign Tenant</h3>
              </div>
              <form action="/pg/tenant/add" method="POST" class="p-6">
                <input type="hidden" name="pgId" value="<%= pg._id %>" />
                <input type="hidden" name="roomId" id="assignRoomId" />
                <input type="hidden" name="bedId" id="assignBedId" />

                <div class="space-y-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Tenant Name *</label>
                    <input name="name" placeholder="Full name"
                      class="border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                      required />
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Phone Number *</label>
                    <input name="phone" type="tel" placeholder="10-digit number"
                      class="border border-gray-300 rounded-lg p-3 w-full focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                      required />
                  </div>

                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Monthly Rent *</label>
                    <div class="relative">
                      <span class="absolute left-3 top-3 text-gray-500">₹</span>
                      <input name="rentAmount" type="number" min="0" placeholder="5000"
                        class="border border-gray-300 rounded-lg p-3 w-full pl-8 focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all"
                        required />
                    </div>
                  </div>
                </div>

                <div class="flex gap-3 mt-6">
                  <button type="button" onclick="closeAssignTenantModal()"
                    class="flex-1 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 font-medium transition-colors duration-200">
                    Cancel
                  </button>
                  <button type="submit"
                    class="flex-1 px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-colors duration-200">
                    Assign Tenant
                  </button>
                </div>
              </form>
            </div>
          </div>

          <script>
            function openAddRoomModal() {
              document.getElementById("addRoomModal").classList.remove("hidden");
            }
            function closeAddRoomModal() {
              document.getElementById("addRoomModal").classList.add("hidden");
            }

            function openAssignTenantModal(bedId, roomId) {
              document.getElementById("assignBedId").value = bedId;
              document.getElementById("assignRoomId").value = roomId;
              document.getElementById("assignTenantModal").classList.remove("hidden");
            }
            function closeAssignTenantModal() {
              document.getElementById("assignTenantModal").classList.add("hidden");
            }

            // Close modals when clicking outside
            document.getElementById('addRoomModal').addEventListener('click', function (e) {
              if (e.target === this) closeAddRoomModal();
            });
            document.getElementById('assignTenantModal').addEventListener('click', function (e) {
              if (e.target === this) closeAssignTenantModal();
            });
          </script>